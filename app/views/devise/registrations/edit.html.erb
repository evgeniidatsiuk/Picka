<body style="background-color: #666666;">
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "login100-form validate-form"}) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <span class="login100-form-title p-b-43">
            Edit
          </span>
          
          <div class="field wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input100" %>
            <span class="focus-input100"></span>
            <span class="label-input100">Email</span>
          </div>
          
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          
          <div class="field wrap-input100">
            <i>(leave blank if you don't want to change it)</i>
            <%= f.password_field :password, autocomplete: "new-password", class:"input100" %>
						<span class="focus-input100"></span>
						<span class="label-input100">New password</span>
          </div>

					<div class="field wrap-input100">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input100" %>
            <span class="focus-input100"></span>
						<span class="label-input100">Password confirmation</span>
          </div>
          
          <div class="field wrap-input100">
            <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class:"input100" %>
            <span class="focus-input100"></span>
						<span class="label-input100">Current password</span>
          </div>

					<div class="actions container-login100-form-btn">
            <%= f.submit "Update", class:"login100-form-btn" %>
          </div>
          
					
          <div class="text-center p-t-46 p-b-20">
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"login100-form-btn" %></p>
            <%= link_to "Back", :back %>
					</div>

				<%end%>

        <div class="login100-more" style="background-image: url(/assets/annie-spratt-197099-unsplash.jpg);">
				</div>
			</div>
		</div>
	</div>
	
</body>