<body style="background-color: #666666;">
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "login100-form validate-form"}) do |f| %>
          <span class="login100-form-title p-b-43">
            Login to continue
          </span>
          
          <div class="field wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input100" %>
            <span class="focus-input100"></span>
            <span class="label-input100">Email</span>
          </div>
					
					<div class="field wrap-input100 validate-input" data-validate="Password is required">
            <%= f.password_field :password, autocomplete: "current-password", class:"input100" %>
						<span class="focus-input100"></span>
						<span class="label-input100">Password</span>
          </div>

					<div class="flex-sb-m w-full p-t-3 p-b-32">
            <div class="contact100-form-checkbox">
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me, class:"input-checkbox100", id:"ckb1" %>
                <label class="label-checkbox100" for="ckb1">
                  Remember me
                </label>
              <% end %>
						</div>
          </div>
			

					<div class="actions container-login100-form-btn">
            <%= f.submit "Log in", class:"login100-form-btn" %>
					</div>
					
					<div class="text-center p-t-46 p-b-20">
            <%= render "devise/shared/links" %>
					</div>

				<%end%>

        <div class="login100-more" style="background-image: url(/assets/annie-spratt-197099-unsplash.jpg);">
				</div>
			</div>
		</div>
	</div>
	
</body>